{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ADF-BDP-DEV-01"
		},
		"lns_azure_table_storage_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'lns_azure_table_storage'"
		},
		"lns_data_lake_storage_raw_data_lake_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'lns_data_lake_storage_raw_data_lake'"
		},
		"lns_landing_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'lns_landing'"
		},
		"lns_sql_server_reporting_db_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'lns_sql_server_reporting_db'"
		},
		"lns_data_lake_storage_raw_data_lake_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://dlslandingraw.dfs.core.windows.net"
		},
		"lns_landing_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://dlsbdpdatalake.dfs.core.windows.net"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ADF-BDP-DEV-01_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"lns_azure_table_storage_connectionString": {
						"value": "[parameters('lns_azure_table_storage_connectionString')]"
					},
					"lns_data_lake_storage_raw_data_lake_accountKey": {
						"value": "[parameters('lns_data_lake_storage_raw_data_lake_accountKey')]"
					},
					"lns_landing_accountKey": {
						"value": "[parameters('lns_landing_accountKey')]"
					},
					"lns_sql_server_reporting_db_connectionString": {
						"value": "[parameters('lns_sql_server_reporting_db_connectionString')]"
					},
					"lns_data_lake_storage_raw_data_lake_properties_typeProperties_url": {
						"value": "[parameters('lns_data_lake_storage_raw_data_lake_properties_typeProperties_url')]"
					},
					"lns_landing_properties_typeProperties_url": {
						"value": "[parameters('lns_landing_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "ADF-BDP-DEV-01_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'ADF-BDP-DEV-01_ArmTemplate_0')]"
			]
		}
	]
}